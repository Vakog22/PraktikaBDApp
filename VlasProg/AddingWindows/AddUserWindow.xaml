<Window x:Class="VlasProg.AddingWindows.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VlasProg.AddingWindows"
        mc:Ignorable="d"
        Title="Добавление пользователя" Height="450" Width="400"  WindowStartupLocation="CenterScreen">
    <Grid Background="#FFFFC36A">
        <StackPanel>
            <TextBlock Text="Логин" Margin="10,10,10,10"/>
            <TextBox x:Name="TBLogin" Margin="10,0,10,10" Background="#FFFBD49B"/>
            <TextBlock Text="Пароль" Margin="10,10,10,10"/>
            <TextBox x:Name="TBPassword" Margin="10,0,10,10" Background="#FFFBD49B"/>
            <TextBlock Text="Тип аккаунта" Margin="10,10,10,10"/>
            <ComboBox x:Name="CBAccountType" Margin="10,0,10,10" Background="#FFFBD49B"/>
            <TextBlock Text="Имя" Margin="10,10,10,10"/>
            <TextBox x:Name="TBUserName" Margin="10,0,10,10" Background="#FFFBD49B"/>
            <Button x:Name="BTN_SAVE" Content="Добавить" HorizontalAlignment="Center" Click="BTN_SAVE_Click" Background="#FFFBD49B"/>
        </StackPanel>
    </Grid>
</Window>
