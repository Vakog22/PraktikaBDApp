<Window x:Class="VlasProg.PersonalCabinetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VlasProg"
        mc:Ignorable="d"
        Title="Личный кабинет" Height="260" Width="400"  WindowStartupLocation="CenterScreen">
    <Grid Background="#FFFFC36A">
        <StackPanel>
            <TextBlock Text="Логин" Margin="10,10,10,10"/>
            <TextBox x:Name="TBLogin" Margin="10,0,10,10" Background="#FFFBD49B"/>
            <TextBlock Text="Пароль" Margin="10,10,10,10"/>
            <TextBox x:Name="TBPassword" Margin="10,0,10,10" Background="#FFFBD49B"/>
            <TextBlock Text="Имя" Margin="10,10,10,10"/>
            <TextBox x:Name="TBUserName" Margin="10,0,10,10" Background="#FFFBD49B"/>
            <WrapPanel>
                <Button x:Name="BTN_BACK" Content="Назад" HorizontalAlignment="Right" Click="BTN_BACK_Click" Background="#FFFBD49B" Margin="10,0,0,0" Width="70"/>
                <Button x:Name="BTN_SAVE" Content="Сохранить" HorizontalAlignment="Left" Click="BTN_SAVE_Click" Background="#FFFBD49B" Margin="230,0,0,0" Width="70"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
